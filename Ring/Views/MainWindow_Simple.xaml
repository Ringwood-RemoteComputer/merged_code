<Window x:Class="Ring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Industrial Control System" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" ResizeMode="CanResizeWithGrip" Background="#F5F5F5"
        FontFamily="Segoe UI" FontSize="12"
        Icon="pack://application:,,,/Images/RW-Blue.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#34495E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- System Icon and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,15">
                <Border Background="#3498DB" CornerRadius="8" Padding="8" Margin="0,0,15,0">
                    <Image Source="pack://application:,,,/Images/RW-Blue.ico" Width="32" Height="32"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Industrial Control System" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Advanced Process Monitoring" 
                               FontSize="12" 
                               Foreground="#BDC3C7" 
                               Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- System Status -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,15">
                <Border Background="#27AE60" CornerRadius="15" Padding="8,4" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,0,6,0"/>
                        <TextBlock x:Name="SystemStatusText" Text="System Online" 
                                   FontSize="12" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- System Status Dashboard -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Communication Status -->
            <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="8" Margin="8">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Border Background="#3498DB" CornerRadius="4" Padding="6,3" Margin="0,0,10,0">
                            <TextBlock Text="ðŸ“¡" FontSize="16"/>
                        </Border>
                        <TextBlock Text="Communication" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Content -->
                    <StackPanel Grid.Row="1">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="12" Height="12" Fill="#4CAF50" Margin="0,0,8,0"/>
                            <TextBlock x:Name="CommStatusText" Text="PLC Connected" FontWeight="Bold" 
                                       FontSize="14" Foreground="#27AE60"/>
                        </StackPanel>
                        <TextBlock x:Name="CommDetails" Text="IP: 192.168.202.10" FontSize="12" Foreground="#7F8C8D" Margin="0,2"/>
                        <TextBlock x:Name="CommLastUpdate" Text="Last Update: --" FontSize="12" Foreground="#7F8C8D" Margin="0,2"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Make Ready Tank Status -->
            <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="8" Margin="8">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Border Background="#E67E22" CornerRadius="4" Padding="6,3" Margin="0,0,10,0">
                            <TextBlock Text="ðŸ­" FontSize="16"/>
                        </Border>
                        <TextBlock Text="Make Ready Tank" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Content -->
                    <StackPanel Grid.Row="1">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="12" Height="12" Fill="#FF9800" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TankStatusText" Text="Monitoring Active" FontWeight="Bold" 
                                       FontSize="14" Foreground="#E67E22"/>
                        </StackPanel>
                        <TextBlock x:Name="TankWeight" Text="Weight: -- lbs" FontSize="12" Margin="0,3" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TankTemperature" Text="Temperature: --Â°C" FontSize="12" Margin="0,3" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TankBorax" Text="Borax/Caustic: -- lbs" FontSize="12" Margin="0,3" Foreground="#7F8C8D"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Alarms Status -->
            <Border Grid.Row="0" Grid.Column="2" Background="White" CornerRadius="8" Margin="8">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Border Background="#E74C3C" CornerRadius="4" Padding="6,3" Margin="0,0,10,0">
                            <TextBlock Text="ðŸš¨" FontSize="16"/>
                        </Border>
                        <TextBlock Text="Alarms" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Content -->
                    <StackPanel Grid.Row="1">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="12" Height="12" Fill="#4CAF50" Margin="0,0,8,0"/>
                            <TextBlock x:Name="AlarmStatusText" Text="No Active Alarms" FontWeight="Bold" 
                                       FontSize="14" Foreground="#27AE60"/>
                        </StackPanel>
                        <TextBlock x:Name="AlarmCount" Text="Active: 0" FontSize="12" Margin="0,3" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="AlarmLastTriggered" Text="Last: None" FontSize="12" Margin="0,3" Foreground="#7F8C8D"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- System Controls -->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Background="White" CornerRadius="8" Margin="8,20,8,0">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,15">
                    <Button Content="ðŸ­ Open Make Ready Tank" Width="180" Height="50" Margin="8" Click="MainScreen_Click" 
                            Style="{StaticResource ModernButton}" FontSize="14" FontWeight="SemiBold"/>
                    <Button Content="ðŸš¨ View Alarms" Width="150" Height="50" Margin="8" Click="Alarms_Click" 
                            Style="{StaticResource ModernButton}" FontSize="14" FontWeight="SemiBold"/>
                    <Button Content="ðŸ“Š System Status" Width="150" Height="50" Margin="8" Click="SystemStatus_Click" 
                            Style="{StaticResource ModernButton}" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <!-- Real-time Data Grid -->
            <DataGrid Grid.Row="2" Grid.ColumnSpan="3" x:Name="SystemDataGrid" AutoGenerateColumns="True" Height="200" Margin="0,10,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Parameter" Binding="{Binding Parameter}" Width="150"/>
                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100"/>
                    <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="80"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Last Update" Binding="{Binding LastUpdate}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Modern Footer Section -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#34495E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- System Information -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,10">
                <TextBlock x:Name="SystemTime" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                           FontSize="12" Foreground="#BDC3C7" Margin="0,0,20,0"/>
                <TextBlock Text="Ringwood Industrial Systems" FontSize="12" Foreground="#BDC3C7"/>
            </StackPanel>
            
            <!-- Connection Status -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,10">
                <Ellipse x:Name="FooterStatusIndicator" Width="8" Height="8" Fill="White" Margin="0,0,5,0"/>
                <TextBlock x:Name="FooterStatusText" Text="All Systems Operational" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>




