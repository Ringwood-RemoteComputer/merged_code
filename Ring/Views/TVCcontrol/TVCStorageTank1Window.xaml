<Window x:Class="Ring.TVCStorageTank1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tank TVC User Edit Screen" Height="600" Width="900" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#B0C4DE">
        <!-- Main Content -->
        <StackPanel Margin="10">
            <!-- Title -->
            <TextBlock Text="Storage Tank 1" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

            <!-- Tank Agitator Controls -->
            <GroupBox Header="Tank Agitator Controls" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Tank Agitator Mode" VerticalAlignment="Center" Width="200" />
                        <ComboBox Width="200">
                            <ComboBoxItem Content="Agitator Mode Off" />
                            <ComboBoxItem Content="Agitator Mode On" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Tank Agitator Preset Timer On" VerticalAlignment="Center" Width="200" />
                        <TextBox Width="100" />
                        <TextBlock Text="Minutes:" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Tank Agitator Preset Timer Off" VerticalAlignment="Center" Width="200" />
                        <TextBox Width="100" />
                        <TextBlock Text="Minutes:" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Tank TVC Controls -->
            <GroupBox Header="Tank TVC Controls" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Tank TVC Control" VerticalAlignment="Center" Width="200" />
                        <ComboBox Width="200">
                            <ComboBoxItem Content="Tank TVC Control Off" />
                            <ComboBoxItem Content="Tank TVC Control On" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Tank Heating Temperature Preset" VerticalAlignment="Center" Width="200" />
                        <TextBox Width="100" />
                        <TextBlock Text="Celsius" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Tank Cooling Temperature Preset" VerticalAlignment="Center" Width="200" />
                        <TextBox Width="100" />
                        <TextBlock Text="Celsius" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Main TVC Controls -->
            <GroupBox Header="Main TVC Controls">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Main TVC Control" VerticalAlignment="Center" Width="200" />
                        <ComboBox Width="200">
                            <ComboBoxItem Content="Main TVC Control Off" />
                            <ComboBoxItem Content="Main TVC Control On" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Main TVC Heating Temperature Preset" VerticalAlignment="Center" Width="200" />
                        <TextBox Width="100" />
                        <TextBlock Text="Celsius" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Main TVC Cooling Temperature Preset" VerticalAlignment="Center" Width="200" />
                        <TextBox Width="100" />
                        <TextBlock Text="Celsius" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Close Button -->
        <Button Content="Close" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="Close_Click" />
    </Grid>
</Window>
