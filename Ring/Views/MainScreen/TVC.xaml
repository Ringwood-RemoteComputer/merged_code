<UserControl x:Class="Ring.Views.MainScreen.TVC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Main content area -->
        <Grid Grid.Row="0" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Centered container for the two cards -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Card 1 - TVC Tank -->
                <Border Grid.Column="0" 
                        BorderThickness="1" 
                        BorderBrush="#E0E0E0" 
                        CornerRadius="8" 
                        Margin="0,0,12,0"
                        Background="White"
                        Effect="{StaticResource DropShadowEffect}">
                <StackPanel Margin="16">
                    <!-- TVC Tank Header -->
                    <TextBlock Text="TVC Tank" 
                               FontWeight="SemiBold" 
                               FontSize="16" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,16" 
                               Foreground="#0078D4" 
                               LineHeight="20" />
                    
                    <!-- TVC Tank Visualization -->
                    <Border Height="300" 
                            BorderThickness="1" 
                            BorderBrush="#E0E0E0" 
                            CornerRadius="6"
                            Background="#F8F9FA"
                            Margin="0,0,0,12">
                        <Image Source="{Binding TVCImage}" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Stretch="UniformToFill"
                               RenderOptions.BitmapScalingMode="HighQuality" />
                    </Border>
                    
                    <!-- TVC Data -->
                    <TextBlock Text="TVC Data" 
                               FontWeight="SemiBold" 
                               FontSize="12" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8" 
                               Foreground="#1E1E1E" 
                               LineHeight="16" />
                    
                    <!-- Data Items -->
                    <StackPanel Margin="0,0,0,6">
                        <!-- Temperature -->
                        <Border BorderThickness="1" 
                                BorderBrush="#E0E0E0" 
                                Padding="6,4" 
                                Margin="0,0,0,4"
                                Background="White"
                                CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="Temp (째F)" 
                                           FontSize="9" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding TemperatureDisplay}" 
                                           FontSize="11" 
                                           FontWeight="SemiBold"
                                           Foreground="#1E1E1E" 
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        
                        <!-- Heaters Status -->
                        <Border BorderThickness="1" 
                                BorderBrush="#E0E0E0" 
                                Padding="6,4" 
                                Margin="0,0,0,0"
                                Background="White"
                                CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="Heaters" 
                                           FontSize="9" 
                                           Foreground="#666666" 
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding HeatersDisplay}" 
                                           FontSize="11" 
                                           FontWeight="SemiBold"
                                           Foreground="#1E1E1E" 
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
                </Border>
                
                <!-- Card 2 - Storage Tanks Temperature Control -->
                <Border Grid.Column="1" 
                        BorderThickness="1" 
                        BorderBrush="#E0E0E0" 
                        CornerRadius="8" 
                        Margin="12,0,0,0"
                        Background="White"
                        Effect="{StaticResource DropShadowEffect}">
                <StackPanel Margin="16">
                    <!-- Header -->
                    <TextBlock Text="Storage Tanks Temperature Control" 
                               FontWeight="SemiBold" 
                               FontSize="16" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,16" 
                               Foreground="#0078D4" 
                               LineHeight="20" />
                    
                    <!-- Storage Tank 1 Section -->
                    <Border BorderThickness="1" 
                            BorderBrush="#E0E0E0" 
                            CornerRadius="6"
                            Background="#F8F9FA"
                            Margin="0,0,0,12"
                            Padding="12">
                        <StackPanel>
                            <TextBlock Text="Storage Tank 1" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,8" 
                                       Foreground="#1E1E1E" />
                            
                            <!-- Temperature -->
                            <Border BorderThickness="1" 
                                    BorderBrush="#E0E0E0" 
                                    Padding="6,4" 
                                    Margin="0,0,0,4"
                                    Background="White"
                                    CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="Temp (째F)" 
                                               FontSize="9" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="{Binding StorageTank1TemperatureDisplay}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="#1E1E1E" 
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                            
                            <!-- Temperature Control Mode -->
                            <Border BorderThickness="1" 
                                    BorderBrush="#E0E0E0" 
                                    Padding="6,4" 
                                    Margin="0,0,0,0"
                                    Background="White"
                                    CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="Tank Temperature Control Mode" 
                                               FontSize="9" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" />
                                    <TextBlock Text="{Binding StorageTank1ControlModeDisplay}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="#1E1E1E" 
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Storage Tank 2 Section -->
                    <Border BorderThickness="1" 
                            BorderBrush="#E0E0E0" 
                            CornerRadius="6"
                            Background="#F8F9FA"
                            Margin="0,0,0,12"
                            Padding="12">
                        <StackPanel>
                            <TextBlock Text="Storage Tank 2" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,8" 
                                       Foreground="#1E1E1E" />
                            
                            <!-- Temperature -->
                            <Border BorderThickness="1" 
                                    BorderBrush="#E0E0E0" 
                                    Padding="6,4" 
                                    Margin="0,0,0,4"
                                    Background="White"
                                    CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="Temp (째F)" 
                                               FontSize="9" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="{Binding StorageTank2TemperatureDisplay}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="#1E1E1E" 
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                            
                            <!-- Temperature Control Mode -->
                            <Border BorderThickness="1" 
                                    BorderBrush="#E0E0E0" 
                                    Padding="6,4" 
                                    Margin="0,0,0,0"
                                    Background="White"
                                    CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="Tank Temperature Control Mode" 
                                               FontSize="9" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" />
                                    <TextBlock Text="{Binding StorageTank2ControlModeDisplay}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="#1E1E1E" 
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Storage Tank 3 Section -->
                    <Border BorderThickness="1" 
                            BorderBrush="#E0E0E0" 
                            CornerRadius="6"
                            Background="#F8F9FA"
                            Margin="0,0,0,0"
                            Padding="12">
                        <StackPanel>
                            <TextBlock Text="Storage Tank 3" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,8" 
                                       Foreground="#1E1E1E" />
                            
                            <!-- Temperature -->
                            <Border BorderThickness="1" 
                                    BorderBrush="#E0E0E0" 
                                    Padding="6,4" 
                                    Margin="0,0,0,4"
                                    Background="White"
                                    CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="Temp (째F)" 
                                               FontSize="9" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="{Binding StorageTank3TemperatureDisplay}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="#1E1E1E" 
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                            
                            <!-- Temperature Control Mode -->
                            <Border BorderThickness="1" 
                                    BorderBrush="#E0E0E0" 
                                    Padding="6,4" 
                                    Margin="0,0,0,0"
                                    Background="White"
                                    CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="Tank Temperature Control Mode" 
                                               FontSize="9" 
                                               Foreground="#666666" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" />
                                    <TextBlock Text="{Binding StorageTank3ControlModeDisplay}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="#1E1E1E" 
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer Control Bar -->
        <Border Grid.Row="1" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E0E0E0" 
                Background="White"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                
                <!-- Left side - Empty -->
                <StackPanel Grid.Column="0" />
                
                <!-- Middle - Empty -->
                <StackPanel Grid.Column="1" />
                
                <!-- Right side - Close button -->
                <Button Grid.Column="2" 
                        Content="CLOSE" 
                        Width="120"
                        Height="40"
                        HorizontalAlignment="Right"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="Close_Click" />
            </Grid>
        </Border>
    </Grid>
</UserControl>

