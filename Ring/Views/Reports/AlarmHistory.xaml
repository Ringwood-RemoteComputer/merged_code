<Window x:Class="Ring.AlarmHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ring"
        mc:Ignorable="d"
        Title="AlarmHistory" Height="450" Width="800">
    <Grid>
        <!-- Main Border -->
        <Border Background="#D8D8D8" CornerRadius="5" Padding="10" Margin="10">
            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Usage Report Query Form" FontSize="16" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Start Time and Date -->
                <GroupBox Header="Start Time and Date" Margin="5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ComboBox Name="StartTimeComboBox" Width="100" Margin="5">
                            <ComboBoxItem Content="12:00:00 AM" IsSelected="True"/>
                            <ComboBoxItem Content="6:00:00 AM"/>
                            <ComboBoxItem Content="12:00:00 PM"/>
                            <ComboBoxItem Content="6:00:00 PM"/>
                        </ComboBox>
                        <DatePicker Name="StartDatePicker" SelectedDate="2025-02-27" Width="120" Margin="5"/>
                    </StackPanel>
                </GroupBox>

                <!-- End Time and Date -->
                <GroupBox Header="End Time and Date" Margin="5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ComboBox Name="EndTimeComboBox" Width="100" Margin="5">
                            <ComboBoxItem Content="11:59:59 PM" IsSelected="True"/>
                            <ComboBoxItem Content="6:00:00 AM"/>
                            <ComboBoxItem Content="12:00:00 PM"/>
                            <ComboBoxItem Content="6:00:00 PM"/>
                        </ComboBox>
                        <DatePicker Name="EndDatePicker" SelectedDate="2025-03-05" Width="120" Margin="5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Buttons -->
                <StackPanel HorizontalAlignment="Center" Margin="10">
                    <Button Name="PreviewButton" Content="Preview Usage Report" Width="200" Height="30" Margin="5"/>
                    <Button Name="PrintButton" Content="Print Usage Report" Width="200" Height="30" Margin="5"/>
                </StackPanel>

                <!-- Close Button -->
                <StackPanel HorizontalAlignment="Right" Margin="10">
                    <Button Name="CloseButton" Content="Close" Width="80" Height="30" Background="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="White" CornerRadius="5" BorderBrush="Black" BorderThickness="1">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="pack://application:,,,/Images/close-icon.png" Width="16" Height="16" Margin="5"/>
                                        <TextBlock Text="Close" VerticalAlignment="Center" Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>

