<Window x:Class="Ring.UsageReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usage Report Manager" Height="700" Width="1000" 
        WindowStartupLocation="CenterScreen" Background="#F5F5F5"
        FontFamily="Segoe UI" FontSize="14">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF4081"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Subheader Text Style -->
        <Style x:Key="SubheaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Form Field Style -->
        <Style x:Key="FormField" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <Image Source="pack://application:,,,/Images/BannerRingwood.png" Width="40" Height="40" Margin="0,0,15,0" Stretch="Uniform"/>
                    <StackPanel>
                        <TextBlock Text="Usage Report Manager" 
                                  Style="{StaticResource HeaderText}" 
                                  Foreground="White" FontSize="28"/>
                        <TextBlock Text="Generate and analyze usage reports" 
                                  Foreground="#B3FFFFFF" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Query Parameters -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Query Parameters" Style="{StaticResource SubheaderText}"/>
                    
                    <!-- Start Time and Date -->
                    <StackPanel Style="{StaticResource FormField}">
                        <TextBlock Text="Start Time and Date" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Name="StartTimeComboBox" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="12:00:00 AM" IsSelected="True"/>
                                <ComboBoxItem Content="6:00:00 AM"/>
                                <ComboBoxItem Content="12:00:00 PM"/>
                                <ComboBoxItem Content="6:00:00 PM"/>
                            </ComboBox>
                            <DatePicker Name="StartDatePicker" Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- End Time and Date -->
                    <StackPanel Style="{StaticResource FormField}">
                        <TextBlock Text="End Time and Date" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Name="EndTimeComboBox" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="11:59:59 PM" IsSelected="True"/>
                                <ComboBoxItem Content="6:00:00 PM"/>
                                <ComboBoxItem Content="11:59:59 PM"/>
                            </ComboBox>
                            <DatePicker Name="EndDatePicker" Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Report Type -->
                    <StackPanel Style="{StaticResource FormField}">
                        <TextBlock Text="Report Type" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Name="ReportTypeComboBox" Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="Daily Report" IsSelected="True"/>
                            <ComboBoxItem Content="Weekly Report"/>
                            <ComboBoxItem Content="Monthly Report"/>
                            <ComboBoxItem Content="Custom Period"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Tank Selection -->
                    <StackPanel Style="{StaticResource FormField}">
                        <TextBlock Text="Tank Selection" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Name="TankComboBox" Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="All Tanks" IsSelected="True"/>
                            <ComboBoxItem Content="Tank 1"/>
                            <ComboBoxItem Content="Tank 2"/>
                            <ComboBoxItem Content="Tank 3"/>
                            <ComboBoxItem Content="Tank 4"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Generate Report" Style="{StaticResource ModernButton}" 
                                Click="GenerateReport_Click"/>
                        <Button Content="Clear Filters" Style="{StaticResource SecondaryButton}" 
                                Click="ClearFilters_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Report Preview -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Report Preview" Style="{StaticResource SubheaderText}"/>
                    
                    <Border Background="#F8F9FA" CornerRadius="6" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Report Summary" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Text="• Total Usage: 1,250 gallons" Margin="0,2"/>
                            <TextBlock Text="• Average Daily: 125 gallons" Margin="0,2"/>
                            <TextBlock Text="• Peak Usage: 2:00 PM" Margin="0,2"/>
                            <TextBlock Text="• Low Usage: 4:00 AM" Margin="0,2"/>
                        </StackPanel>
                    </Border>

                    <!-- Export Options -->
                    <TextBlock Text="Export Options" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Export PDF" Style="{StaticResource SecondaryButton}" 
                                Click="ExportPDF_Click"/>
                        <Button Content="Export Excel" Style="{StaticResource SecondaryButton}" 
                                Click="ExportExcel_Click"/>
                        <Button Content="Print" Style="{StaticResource SecondaryButton}" 
                                Click="Print_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource DividerBrush}" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" Style="{StaticResource SecondaryButton}" 
                        Click="Close_Click" Margin="0,0,10,0"/>
                <Button Content="Save Report" Style="{StaticResource ModernButton}" 
                        Click="SaveReport_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>