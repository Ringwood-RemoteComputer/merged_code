<Window x:Class="Ring.BatchHistoryReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch History Report Manager" Height="700" Width="1000" 
        WindowStartupLocation="CenterScreen" Background="#F5F5F5"
        FontFamily="Segoe UI" FontSize="14">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <Image Source="pack://application:,,,/Images/BannerRingwood.png" Width="40" Height="40" Margin="0,0,15,0" Stretch="Uniform"/>
                    <StackPanel>
                        <TextBlock Text="Batch History Report Manager" 
                                  FontSize="24" FontWeight="Bold" 
                                  Foreground="White"/>
                        <TextBlock Text="Generate and analyze batch history reports" 
                                  Foreground="#B3FFFFFF" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Query Parameters -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Query Parameters" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="#757575" Margin="0,0,0,10"/>
                    
                    <!-- Start Time and Date -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Start Time and Date" 
                                  FontWeight="SemiBold" 
                                  Foreground="#212121" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Name="StartTimeComboBox" Padding="8" Margin="0,0,10,0" MinWidth="120">
                                <ComboBoxItem Content="12:00:00 AM" IsSelected="True"/>
                                <ComboBoxItem Content="6:00:00 AM"/>
                                <ComboBoxItem Content="12:00:00 PM"/>
                                <ComboBoxItem Content="6:00:00 PM"/>
                            </ComboBox>
                            <DatePicker Name="StartDatePicker" Padding="8" MinWidth="150"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- End Time and Date -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="End Time and Date" 
                                  FontWeight="SemiBold" 
                                  Foreground="#212121" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Name="EndTimeComboBox" Padding="8" Margin="0,0,10,0" MinWidth="120">
                                <ComboBoxItem Content="11:59:59 PM" IsSelected="True"/>
                                <ComboBoxItem Content="6:00:00 PM"/>
                                <ComboBoxItem Content="11:59:59 PM"/>
                            </ComboBox>
                            <DatePicker Name="EndDatePicker" Padding="8" MinWidth="150"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Report Type -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Report Type" 
                                  FontWeight="SemiBold" 
                                  Foreground="#212121" Margin="0,0,0,5"/>
                        <ComboBox Name="ReportTypeComboBox" Padding="8" MinWidth="120">
                            <ComboBoxItem Content="Daily Report" IsSelected="True"/>
                            <ComboBoxItem Content="Weekly Report"/>
                            <ComboBoxItem Content="Monthly Report"/>
                            <ComboBoxItem Content="Custom Period"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Tank Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Tank Selection" 
                                  FontWeight="SemiBold" 
                                  Foreground="#212121" Margin="0,0,0,5"/>
                        <ComboBox Name="TankComboBox" Padding="8" MinWidth="120">
                            <ComboBoxItem Content="All Tanks" IsSelected="True"/>
                            <ComboBoxItem Content="Tank 1"/>
                            <ComboBoxItem Content="Tank 2"/>
                            <ComboBoxItem Content="Tank 3"/>
                            <ComboBoxItem Content="Tank 4"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Border Background="#2196F3" CornerRadius="6" Margin="0,0,10,0">
                            <Button Content="Generate Report" Background="Transparent" Foreground="White" 
                                    Padding="16,8" BorderThickness="0"
                                    Click="GenerateReport_Click"/>
                        </Border>
                        <Border Background="Transparent" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="6">
                            <Button Content="Clear Filters" Background="Transparent" 
                                    Foreground="#2196F3" BorderThickness="0"
                                    Padding="16,8"
                                    Click="ClearFilters_Click"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Report Preview -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Report Preview" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="#757575" Margin="0,0,0,10"/>
                    
                    <Border Background="#F8F9FA" CornerRadius="6" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Report Summary" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Text="• Total Batches: 45" Margin="0,2"/>
                            <TextBlock Text="• Successful: 42" Margin="0,2"/>
                            <TextBlock Text="• Failed: 3" Margin="0,2"/>
                            <TextBlock Text="• Average Duration: 2.5 hours" Margin="0,2"/>
                        </StackPanel>
                    </Border>

                    <!-- Export Options -->
                    <TextBlock Text="Export Options" 
                              FontWeight="SemiBold" 
                              Foreground="#212121" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Border Background="Transparent" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="6" Margin="0,0,10,0">
                            <Button Content="Export PDF" Background="Transparent" 
                                    Foreground="#2196F3" BorderThickness="0"
                                    Padding="16,8"
                                    Click="ExportPDF_Click"/>
                        </Border>
                        <Border Background="Transparent" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="6" Margin="0,0,10,0">
                            <Button Content="Export Excel" Background="Transparent" 
                                    Foreground="#2196F3" BorderThickness="0"
                                    Padding="16,8"
                                    Click="ExportExcel_Click"/>
                        </Border>
                        <Border Background="Transparent" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="6">
                            <Button Content="Print" Background="Transparent" 
                                    Foreground="#2196F3" BorderThickness="0"
                                    Padding="16,8"
                                    Click="Print_Click"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#E0E0E0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border Background="Transparent" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="6" Margin="0,0,10,0">
                    <Button Content="Close" Background="Transparent" 
                            Foreground="#2196F3" BorderThickness="0"
                            Padding="16,8"
                            Click="Close_Click"/>
                </Border>
                <Border Background="#2196F3" CornerRadius="6">
                    <Button Content="Save Report" Background="Transparent" Foreground="White" 
                            Padding="16,8" BorderThickness="0"
                            Click="SaveReport_Click"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>