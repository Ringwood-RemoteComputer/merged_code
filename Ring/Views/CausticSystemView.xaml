<UserControl x:Class="Ring.Views.CausticSystemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="900" Height="520">
  <!-- === Enhanced Industrial Theme / palette === -->
  <UserControl.Resources>
    <!-- Steel Colors -->
    <SolidColorBrush x:Key="Steel" Color="#FFC0C0C0"/>
    <SolidColorBrush x:Key="SteelDark" Color="#FF8E8E8E"/>
    <SolidColorBrush x:Key="SteelLight" Color="#FFE8E8E8"/>
    <SolidColorBrush x:Key="SteelShadow" Color="#FF6B6B6B"/>
    
    <!-- Safety Colors -->
    <SolidColorBrush x:Key="DangerRed" Color="#FFFF0000"/>
    <SolidColorBrush x:Key="WarnYellow" Color="#FFFFD700"/>
    <SolidColorBrush x:Key="SafetyYellow" Color="#FFFFF000"/>
    <SolidColorBrush x:Key="RailingYellow" Color="#FFFFE000"/>
    <SolidColorBrush x:Key="SafetyGreen" Color="#FF00FF00"/>
    
    <!-- Industrial Colors -->
    <SolidColorBrush x:Key="OffWhite" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="ConcreteGray" Color="#FFA0A0A0"/>
    <SolidColorBrush x:Key="PipeGray" Color="#FF808080"/>
    <SolidColorBrush x:Key="Ink" Color="#FF222222"/>
    <SolidColorBrush x:Key="InkMuted" Color="#FF555555"/>
    
    <!-- Enhanced Gradients -->
    <LinearGradientBrush x:Key="SteelGrad" StartPoint="0,0" EndPoint="0,1">
      <GradientStop Color="#FFE5E5E5" Offset="0"/>
      <GradientStop Color="#FFCFCFCF" Offset="0.5"/>
      <GradientStop Color="#FFB8B8B8" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SteelGradDark" StartPoint="0,0" EndPoint="0,1">
      <GradientStop Color="#FFB8B8B8" Offset="0"/>
      <GradientStop Color="#FF8E8E8E" Offset="0.5"/>
      <GradientStop Color="#FF6B6B6B" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ConcreteGrad" StartPoint="0,0" EndPoint="0,1">
      <GradientStop Color="#FFC0C0C0" Offset="0"/>
      <GradientStop Color="#FFA0A0A0" Offset="0.5"/>
      <GradientStop Color="#FF808080" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="PipeGrad" StartPoint="0,0" EndPoint="0,1">
      <GradientStop Color="#FFA0A0A0" Offset="0"/>
      <GradientStop Color="#FF808080" Offset="0.5"/>
      <GradientStop Color="#FF606060" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Lighting Effects -->
    <RadialGradientBrush x:Key="Spotlight" Center="0.5,0.3" RadiusX="0.8" RadiusY="0.6">
      <GradientStop Color="#40FFFFFF" Offset="0"/>
      <GradientStop Color="#20FFFFFF" Offset="0.5"/>
      <GradientStop Color="#00FFFFFF" Offset="1"/>
    </RadialGradientBrush>
    
    <LinearGradientBrush x:Key="FloorLight" StartPoint="0,0" EndPoint="0,1">
      <GradientStop Color="#20FFFFFF" Offset="0"/>
      <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>
  </UserControl.Resources>

  <!-- === Enhanced Industrial Canvas === -->
  <Viewbox Stretch="Uniform">
    <Grid Width="1200" Height="700" Background="#FFF9FAFB">
      <!-- Enhanced Background wall with texture -->
      <Rectangle Fill="#FFEDE7DC">
        <Rectangle.Effect>
          <DropShadowEffect Color="#FF000000" BlurRadius="20" ShadowDepth="5" Opacity="0.1"/>
        </Rectangle.Effect>
      </Rectangle>
      
      <!-- Industrial ceiling beams with realistic shadows -->
      <Rectangle Fill="#7A4A2B" Width="20" Height="700" HorizontalAlignment="Left" Margin="120,0,0,0">
        <Rectangle.Effect>
          <DropShadowEffect Color="#FF000000" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
        </Rectangle.Effect>
      </Rectangle>
      <Rectangle Fill="#7A4A2B" Width="20" Height="700" HorizontalAlignment="Left" Margin="680,0,0,0">
        <Rectangle.Effect>
          <DropShadowEffect Color="#FF000000" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
        </Rectangle.Effect>
      </Rectangle>
      
      <!-- Enhanced diamond-plate floor with realistic pattern -->
      <Grid VerticalAlignment="Bottom" Height="170">
        <Rectangle Fill="{StaticResource ConcreteGrad}">
          <Rectangle.Effect>
            <DropShadowEffect Color="#FF000000" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
          </Rectangle.Effect>
        </Rectangle>
        
        <!-- Diamond plate pattern -->
        <Grid>
          <!-- Horizontal lines -->
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="1" Opacity="0.3" Height="1" VerticalAlignment="Top" Margin="0,20,0,0"/>
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="1" Opacity="0.3" Height="1" VerticalAlignment="Top" Margin="0,40,0,0"/>
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="1" Opacity="0.3" Height="1" VerticalAlignment="Top" Margin="0,60,0,0"/>
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="1" Opacity="0.3" Height="1" VerticalAlignment="Top" Margin="0,80,0,0"/>
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="1" Opacity="0.3" Height="1" VerticalAlignment="Top" Margin="0,100,0,0"/>
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="1" Opacity="0.3" Height="1" VerticalAlignment="Top" Margin="0,120,0,0"/>
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="1" Opacity="0.3" Height="1" VerticalAlignment="Top" Margin="0,140,0,0"/>
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="1" Opacity="0.3" Height="1" VerticalAlignment="Top" Margin="0,160,0,0"/>
          
          <!-- Diagonal pattern -->
          <Rectangle Stroke="#FFFFFFFF" StrokeThickness="0.5" Opacity="0.25" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
              <TransformGroup>
                <RotateTransform Angle="45"/>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
              </TransformGroup>
            </Rectangle.RenderTransform>
          </Rectangle>
          <Rectangle Stroke="#FF9AA3AF" StrokeThickness="0.5" Opacity="0.25" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
              <TransformGroup>
                <RotateTransform Angle="-45"/>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
              </TransformGroup>
            </Rectangle.RenderTransform>
          </Rectangle>
        </Grid>
        
        <!-- Floor lighting effect -->
        <Rectangle Fill="{StaticResource FloorLight}" VerticalAlignment="Top" Height="50"/>
      </Grid>

