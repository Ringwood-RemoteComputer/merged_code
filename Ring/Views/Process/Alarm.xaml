<Window x:Class="Ring.AlarmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alarm Management System" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen" Background="#F5F5F5"
        FontFamily="Segoe UI" FontSize="14">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <Image Source="pack://application:,,,/Images/BannerRingwood.png" Width="40" Height="40" Margin="0,0,15,0" Stretch="Uniform"/>
                    <StackPanel>
                        <TextBlock Text="Alarm Management System" 
                                  FontSize="24" FontWeight="Bold" 
                                  Foreground="White"/>
                        <TextBlock Text="Monitor and manage system alarms" 
                                  Foreground="#B3FFFFFF" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Background="#2196F3" CornerRadius="6" Margin="4">
                        <Button Content="Refresh Alarms" Background="Transparent" Foreground="White" 
                                Padding="16,8" BorderThickness="0"
                                Click="RefreshAlarms_Click"/>
                    </Border>
                    <Border Background="Transparent" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="6" Margin="4">
                        <Button Content="Acknowledge All" Background="Transparent" 
                                Foreground="#2196F3" BorderThickness="0"
                                Padding="16,8"
                                Click="AcknowledgeAll_Click"/>
                    </Border>
                    <Border Background="Transparent" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="6" Margin="4">
                        <Button Content="Clear History" Background="Transparent" 
                                Foreground="#2196F3" BorderThickness="0"
                                Padding="16,8"
                                Click="ClearHistory_Click"/>
                    </Border>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" Name="AlarmDataGrid" 
                         AutoGenerateColumns="False" 
                         HeadersVisibility="Column" 
                         IsReadOnly="True"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#F8F9FA"
                         RowHeaderWidth="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Width="120" Binding="{Binding Type}">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status" Width="100" Binding="{Binding Status}">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Alarm Number" Width="120" Binding="{Binding AlarmNumber}">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Description" Width="*" Binding="{Binding AlarmDescription}">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Date" Width="120" Binding="{Binding AlarmDate}">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Time" Width="100" Binding="{Binding AlarmTime}">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#E0E0E0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border Background="Transparent" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="6" Margin="0,0,10,0">
                    <Button Content="Close" Background="Transparent" 
                            Foreground="#2196F3" BorderThickness="0"
                            Padding="16,8"
                            Click="Close_Click"/>
                </Border>
                <Border Background="#2196F3" CornerRadius="6">
                    <Button Content="Export" Background="Transparent" Foreground="White" 
                            Padding="16,8" BorderThickness="0"
                            Click="Export_Click"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>