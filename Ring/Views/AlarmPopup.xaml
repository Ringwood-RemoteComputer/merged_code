<Window x:Class="Ring.Views.AlarmPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ring.Views"
        mc:Ignorable="d"
        Title="CRITICAL ALARM" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        Background="#1A1A1A"
        FontFamily="Segoe UI" 
        FontSize="14"
        Icon="pack://application:,,,/Images/RW-Blue.ico">
    
    <Window.Resources>
        <!-- Critical Alarm Styles -->
        <Style x:Key="CriticalAlarmStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF4444" Offset="0"/>
                        <GradientStop Color="#CC2222" Offset="0.5"/>
                        <GradientStop Color="#AA1111" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#FF6666"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF0000" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="AlarmTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="CriticalButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF6666" Offset="0"/>
                        <GradientStop Color="#CC3333" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF8888"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF8888" Offset="0"/>
                                            <GradientStop Color="#FF4444" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#CC2222" Offset="0"/>
                                            <GradientStop Color="#AA1111" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Alarm Container -->
        <Border Style="{StaticResource CriticalAlarmStyle}" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Alarm Header -->
                <StackPanel Grid.Row="0" Margin="20,20,20,10">
                    <!-- Critical Alarm Icon -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Ellipse Width="40" Height="40" Fill="#FF0000" Margin="0,0,15,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#FF0000" BlurRadius="15" ShadowDepth="0" Opacity="0.9"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="⚠" FontSize="24" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Alarm Title -->
                    <TextBlock x:Name="AlarmTitleText"
                               Text="CRITICAL ALARM" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>
                    
                    <!-- Alarm Subtitle -->
                    <TextBlock x:Name="AlarmSubtitleText"
                               Text="Make Ready Tank Weight Exceeded" 
                               FontSize="18" 
                               Foreground="#FFCCCC" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Alarm Details -->
                <StackPanel Grid.Row="1" Margin="20,0,20,20" VerticalAlignment="Center">
                    <!-- Current Weight Display -->
                    <Border x:Name="WeightBorder"
                            Background="#2A0000" CornerRadius="12" Padding="30,25" Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="CURRENT TANK WEIGHT" 
                                       FontSize="14" 
                                       Foreground="#FFAAAA" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock x:Name="CurrentWeightText" 
                                       Text="500.0 lbs" 
                                       FontSize="48" 
                                       FontWeight="Bold" 
                                       Foreground="#FF0000" 
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,10"/>
                            <TextBlock Text="LIMIT: 500.0 lbs" 
                                       FontSize="12" 
                                       Foreground="#FFAAAA" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Alarm Message -->
                    <TextBlock x:Name="AlarmMessageText"
                               Text="⚠ WARNING: Tank weight has exceeded the critical limit of 500 lbs.&#x0a;Immediate action required to prevent system damage." 
                               FontSize="14" 
                               Foreground="White" 
                               TextWrapping="Wrap" 
                               HorizontalAlignment="Center"
                               LineHeight="20"
                               Margin="0,0,0,20"/>
                    
                    <!-- Timestamp -->
                    <TextBlock x:Name="AlarmTimestamp" 
                               Text="Alarm triggered at: --:--:--" 
                               FontSize="12" 
                               Foreground="#FFAAAA" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,20,20">
                    <Button x:Name="AcknowledgeButton" 
                            Content="ACKNOWLEDGE" 
                            Style="{StaticResource CriticalButtonStyle}"
                            Click="AcknowledgeButton_Click"/>
                    <Button x:Name="SilenceButton" 
                            Content="SILENCE ALARM" 
                            Style="{StaticResource CriticalButtonStyle}"
                            Click="SilenceButton_Click"/>
                    <Button x:Name="EmergencyStopButton" 
                            Content="EMERGENCY STOP" 
                            Style="{StaticResource CriticalButtonStyle}"
                            Click="EmergencyStopButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Blinking Effect -->
        <Border x:Name="BlinkingBorder" 
                Background="#FF0000" 
                Opacity="0.3" 
                CornerRadius="10" 
                Margin="20">
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="BlinkingBorder" 
                                             Storyboard.TargetProperty="Opacity" 
                                             From="0.1" To="0.5" 
                                             Duration="0:0:0.8" 
                                             AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
        </Border>
    </Grid>
</Window>
