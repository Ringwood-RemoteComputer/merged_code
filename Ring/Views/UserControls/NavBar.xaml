            <Border Background="#2D2D2D" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="6"
                    Padding="8"
                    Margin="0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
