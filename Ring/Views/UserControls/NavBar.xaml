                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="Shift1Button" 
                            Content="Shift 1" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="Shift2Button" 
                            Content="Shift 2" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="Shift3Button" 
                            Content="Shift 3" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="TwentyFourHourButton" 
                            Content="24 Hour" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Border>
        </Popup>

