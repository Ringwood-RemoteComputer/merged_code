                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="FormulaReportButton" 
                            Content="Formula Report" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="ShiftConsumptionButton" 
                            Content="Shift Consumption" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="DatabaseExportButton" 
                            Content="Database Export" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Batch Start Submenu Popup -->
        <Popup x:Name="BatchStartSubmenuPopup" 
               Placement="Right" 
               PlacementTarget="{Binding ElementName=BatchStartButton}"
               IsOpen="False"
