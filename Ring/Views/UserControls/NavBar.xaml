                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    Opacity="0.15" 
                                    BlurRadius="8"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" MinWidth="150">
                    <Button x:Name="BatchReportButton" 
                            Content="Batch Report" 
                            Height="36" 
                            Padding="8,4"
