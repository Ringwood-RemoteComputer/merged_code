                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="EspanolArgentinaButton" 
                            Content="EspaÃ±ol (Argentina)" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
