        <Popup x:Name="LanguageSubmenuPopup" 
               Placement="Right" 
               PlacementTarget="{Binding ElementName=LanguageButton}"
               IsOpen="False"
               PopupAnimation="Fade"
               AllowsTransparency="True"
               HorizontalOffset="5">
            <Border Background="#2D2D2D" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
