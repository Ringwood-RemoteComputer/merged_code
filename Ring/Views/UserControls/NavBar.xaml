                            Content="Batch History Report" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="BatchUsageReportButton" 
                            Content="Batch Usage Report" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
