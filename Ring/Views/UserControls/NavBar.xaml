<UserControl x:Class="Ring.Views.UserControls.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ring.Views.UserControls"
             mc:Ignorable="d" 
             Width="150"
             d:DesignHeight="450">

    <Grid Background="#1E1E1E">
        <!-- Main Navigation StackPanel -->
        <StackPanel Orientation="Vertical" Margin="0,5,5,5">

            <!--  Ringwood Logo  -->
            <Image Source="/Images/LogoCompany.png" 
                   Height="80" 
                   Width="80" 
                   HorizontalAlignment="Center"
                   Margin="8,8,8,16" />
           
            <TextBlock Text="Navigation" 
                       FontWeight="SemiBold" 
                       FontSize="16"
                       Margin="0,0,0,16" 
                       HorizontalAlignment="Center" 
                       Foreground="#FFFFFF"
                       LineHeight="20" />

            <Button x:Name="DashboardButton" Content="Dashboard" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="ProcessButton" Content="Process" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="MainScreenButton" Content="Main Screen" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="ReportsButton" Content="Reports" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="BatchStartButton" Content="Batch Start" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="TvcControlButton" Content="TVC Control" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="UseTanksButton" Content="Use Tanks" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="ShiftsButton" Content="Shifts" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="LanguageButton" Content="Language" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="SetupButton" Content="Setup" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
            <Button x:Name="HelpButton" Content="Help" Height="42" Padding="8,6" Click="HandleButtonClick" Style="{StaticResource NavButtonStyle}"/>
        </StackPanel>

        <!-- Process Submenu Popup -->
        <Popup x:Name="ProcessSubmenuPopup" 
               Placement="Right" 
               PlacementTarget="{Binding ElementName=ProcessButton}"
               IsOpen="False"
               PopupAnimation="Fade"
               AllowsTransparency="True"
               HorizontalOffset="5">
            <Border Background="#2D2D2D" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="6"
                    Padding="8"
                    Margin="0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    Opacity="0.15" 
                                    BlurRadius="8"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" MinWidth="90">
                    <Button x:Name="HoldButton" 
                            Content="Hold" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="AlarmsButton" 
                            Content="Alarms" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Main Screen Submenu Popup -->
