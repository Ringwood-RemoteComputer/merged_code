            <Border Background="#2D2D2D" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="6"
                    Padding="8"
                    Margin="0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    Opacity="0.15" 
                                    BlurRadius="8"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" MinWidth="120">
                    <Button x:Name="StorageTank1Button" 
                            Content="Storage Tank 1" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="StorageTank2Button" 
                            Content="Storage Tank 2" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Border>
        </Popup>

        <!-- TVC Control Submenu Popup -->
        <Popup x:Name="TvcControlSubmenuPopup" 
               Placement="Right" 
               PlacementTarget="{Binding ElementName=TvcControlButton}"
               IsOpen="False"
               PopupAnimation="Fade"
