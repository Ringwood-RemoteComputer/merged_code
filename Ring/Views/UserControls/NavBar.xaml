                    BorderThickness="1" 
                    CornerRadius="6"
                    Padding="8"
                    Margin="0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    Opacity="0.15" 
                                    BlurRadius="8"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" MinWidth="250">
                    <Button x:Name="PasswordButton" 
                            Content="Password" 
                            Height="36" 
                            Padding="8,4"
