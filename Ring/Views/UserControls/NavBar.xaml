                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    Opacity="0.15" 
                                    BlurRadius="8"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" MinWidth="120">
                    <Button x:Name="MakeReadyTankButton" 
                            Content="Make Ready Tank" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="StorageTankGroupButton" 
                            Content="Storage Tank Group" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="UseTankGroupButton" 
                            Content="Use Tank Group" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="BoraxCausticTankButton" 
                            Content="Borax/Caustic Tank" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="TvcButton" 
                            Content="TVC" 
                            Height="36" 
                            Padding="8,4"
                            HorizontalAlignment="Left" 
                            Click="HandleButtonClick" 
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Border>
        </Popup>

