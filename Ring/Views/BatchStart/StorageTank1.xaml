<Window x:Class="Ring.Views.BatchStart.StorageTank1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Storage Tank 1 - Batch Start User Edit Screen" Height="750" Width="1300"
        WindowStartupLocation="CenterScreen" Background="#E8F0F5"
        FontFamily="Segoe UI" FontSize="13"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Card Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="24"
                          ShadowDepth="3"
                          Opacity="0.25"
                          Direction="270" />

        <!-- Gradient Background Brush -->
        <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F8FAFC" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardGradientBrush}"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,16,16"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Modern RadioButton Style -->
        <Style x:Key="ModernRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="RadioBorder"
                                CornerRadius="20"
                                Padding="8,4"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <Grid Width="14" Height="14" Margin="0,0,8,0">
                                    <Ellipse x:Name="RadioEllipse"
                                             Width="14" Height="14"
                                             Stroke="#2563EB"
                                             StrokeThickness="1.5"
                                             Fill="Transparent"/>
                                    <Ellipse x:Name="RadioFill"
                                             Width="8" Height="8"
                                             Fill="#2563EB"
                                             Opacity="0"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                <ContentPresenter Content="{TemplateBinding Content}"
                                                VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioFill" Property="Opacity" Value="1"/>
                                <Setter TargetName="RadioBorder" Property="Background" Value="#EFF6FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioBorder" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListBox Style for Formulas -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FAFBFC"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#EFF6FF"/>
                                <Setter Property="Foreground" Value="#1E40AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Numeric Input Field Style -->
        <Style x:Key="NumericFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="10,10,45,10"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="InputBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="InputBorder" Property="BorderBrush" Value="#2563EB"/>
                                <Setter TargetName="InputBorder" Property="BorderThickness" Value="2.5"/>
                                <Setter TargetName="InputBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FFFFFF" Offset="0"/>
                                            <GradientStop Color="#F8FAFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="InputBorder" Property="BorderBrush" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="0.5"/>
                        <GradientStop Color="#1D4ED8" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PrimaryButtonBorder"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PrimaryButtonBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="0.5"/>
                                            <GradientStop Color="#1E40AF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PrimaryButtonBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1E40AF" Offset="0"/>
                                            <GradientStop Color="#1E3A8A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PrimaryButtonBorder" Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="SecondaryButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SecondaryButtonBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F8FAFC" Offset="0"/>
                                            <GradientStop Color="#F1F5F9" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="SecondaryButtonBorder" Property="BorderBrush" Value="#94A3B8"/>
                                <Setter Property="Foreground" Value="#334155"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="SecondaryButtonBorder" Property="Background" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Spinner Button Style -->
        <Style TargetType="Button" x:Key="SpinnerButtonStyle">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#F1F5F9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="SpinnerBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SpinnerBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#EFF6FF" Offset="0"/>
                                            <GradientStop Color="#DBEAFE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="SpinnerBorder" Property="BorderBrush" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="#1E40AF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="SpinnerBorder" Property="Background" Value="#DBEAFE"/>
                </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style TargetType="TextBlock" x:Key="FieldLabelStyle">
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Unit Label Style -->
        <Style TargetType="TextBlock" x:Key="UnitLabelStyle">
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Range Label Style -->
        <Style TargetType="TextBlock" x:Key="RangeLabelStyle">
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Border Grid.Row="0" 
                Background="#FFFFFF" 
                CornerRadius="12" 
                Padding="24,20" 
                Margin="0,0,0,24"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.15" Direction="270"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="#2563EB" 
                        CornerRadius="8" 
                        Width="4" 
                        Height="32" 
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="Storage Tank 1 – Batch Start"
                               FontSize="26"
                           FontWeight="Bold" 
                               Foreground="#0F172A"
                               LineHeight="32"/>
                    <TextBlock Text="Formula setup and batch configuration"
                               FontSize="13"
                               Foreground="#64748B"
                               Margin="0,4,0,0"/>
            </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Formula Selection Card -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#EFF6FF" 
                                CornerRadius="8" 
                                Padding="8" 
                                Margin="0,0,12,0"
                                VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="FormatListBulleted" 
                                                     Width="22" Height="22" 
                                                     Foreground="#2563EB" 
                                                     VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Formula Selection" Style="{StaticResource SectionHeaderStyle}"/>
                    </StackPanel>
                    <ListBox x:Name="FormulaListBox" SelectionChanged="FormulaListBox_SelectionChanged">
                        <ListBoxItem Content="Formula 1" IsSelected="True"/>
                        <ListBoxItem Content="Formula 2"/>
                        <ListBoxItem Content="Formula 3"/>
                        <ListBoxItem Content="Formula 4"/>
                        <ListBoxItem Content="Formula 5"/>
                        <ListBoxItem Content="Formula 6"/>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Middle Panel -->
            <Grid Grid.Column="1" Margin="0,0,8,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Splitting Type A Card -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Splitting Type A" Style="{StaticResource SectionHeaderStyle}"/>
                        <StackPanel>
                            <RadioButton Content="No Splitting" IsChecked="True" GroupName="SplitA" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Split with Storage Tank 2" GroupName="SplitA" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Split with Storage Tank 3" GroupName="SplitA" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Split with Storage Tank 4" GroupName="SplitA" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                        </StackPanel>
                        </StackPanel>
                </Border>

                <!-- Splitting Type B Card -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Splitting Type B" Style="{StaticResource SectionHeaderStyle}"/>
                        <StackPanel>
                            <RadioButton Content="No Splitting" IsChecked="True" GroupName="SplitB" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Split with Storage Tank 2" GroupName="SplitB" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Split with Storage Tank 3" GroupName="SplitB" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Split with Storage Tank 4" GroupName="SplitB" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Right Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Batch Start Type Card -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="#EFF6FF" 
                                    CornerRadius="8" 
                                    Padding="8" 
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Beaker" 
                                                         Width="22" Height="22" 
                                                         Foreground="#2563EB" 
                                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Batch Start Type" Style="{StaticResource SectionHeaderStyle}"/>
                        </StackPanel>
                        <StackPanel>
                            <RadioButton Content="No Batching" GroupName="BatchType" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Single Batch" IsChecked="True" GroupName="BatchType" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Continuous Batching" GroupName="BatchType" Style="{StaticResource ModernRadioButton}" Checked="RadioButton_Checked">
                                <RadioButton.ToolTip>
                                    <ToolTip Content="Runs batches continuously without manual intervention"/>
                                </RadioButton.ToolTip>
                            </RadioButton>
                        </StackPanel>
                        <Button Content="All Tanks No Batching" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,16,0,0"
                                Padding="16,10"
                                FontSize="12"
                                Click="AllTanksNoBatching_Click"/>
                        </StackPanel>
                </Border>

                <!-- Batch Volume Card -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Batch Volume" Style="{StaticResource FieldLabelStyle}"/>
                        <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="BatchVolumeTextBox" 
                                     Grid.Column="0"
                                 Text="900" 
                                     Style="{StaticResource NumericFieldStyle}"
                                 PreviewTextInput="NumberValidationTextBox"/>
                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
                                <Button Content="▲" Style="{StaticResource SpinnerButtonStyle}" 
                                        Click="BatchVolumeUp_Click"/>
                                <Button Content="▼" Style="{StaticResource SpinnerButtonStyle}" 
                                        Margin="0,2,0,0"
                                        Click="BatchVolumeDown_Click"/>
                    </StackPanel>
                            <TextBlock Grid.Column="0" 
                                       Text="gal" 
                                       Style="{StaticResource UnitLabelStyle}"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock Text="900 - 1350 Gallons" 
                                   Style="{StaticResource RangeLabelStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Batch Start Level Card -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Batch Start Level" Style="{StaticResource FieldLabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="BatchStartLevelTextBox" 
                                     Grid.Column="0"
                                     Text="500" 
                                     Style="{StaticResource NumericFieldStyle}"
                                     PreviewTextInput="NumberValidationTextBox"/>
                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
                                <Button Content="▲" Style="{StaticResource SpinnerButtonStyle}" 
                                        Click="BatchStartLevelUp_Click"/>
                                <Button Content="▼" Style="{StaticResource SpinnerButtonStyle}" 
                                        Margin="0,2,0,0"
                                        Click="BatchStartLevelDown_Click"/>
                        </StackPanel>
                            <TextBlock Grid.Column="0" 
                                       Text="gal" 
                                       Style="{StaticResource UnitLabelStyle}"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock Text="0 - 2500 Gallons" 
                                   Style="{StaticResource RangeLabelStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Summary Strip & Action Buttons -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Summary Strip -->
            <Border Grid.Column="0" 
                    Background="#F8FAFC" 
                    CornerRadius="10" 
                    Padding="16,12" 
                    BorderBrush="#E2E8F0" 
                    BorderThickness="1.5"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="InformationOutline" 
                                             Width="18" Height="18" 
                                             Foreground="#2563EB" 
                    Margin="0,0,10,0"
                                             VerticalAlignment="Center"/>
                    <TextBlock x:Name="SummaryTextBlock" 
                               Text="Formula 1 • Single Batch • No splitting • 900 gal from level 500"
                               Foreground="#475569"
                               FontSize="13"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="16,0,0,0">
            <Button Content="Close" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="120"
                        Height="40"
                        Click="CloseButton_Click"
                        Margin="0,0,8,0"/>
                <Button Content="Start Batch" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="140"
                        Height="40"
                        Click="StartBatch_Click"/>
        </StackPanel>
        </Grid>
    </Grid>
</Window>
