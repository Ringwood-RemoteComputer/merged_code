<Window x:Class="Ring.Views.BatchStart.Lowmidtank"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ring.Views.BatchStart"
        mc:Ignorable="d"
        Title="Lowmidtank" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Title -->
        <TextBlock Text="Low Mid Tank" FontSize="26" FontWeight="Bold" Margin="10,0,0,0"/>

        <!-- Formula Selection -->
        <GroupBox Header="Formula Selection" Margin="10,50,658,10">
            <ListBox Name="FormulaListBox" Margin="0,0,18,0" SelectionChanged="FormulaListBox_SelectionChanged">
                <ListBoxItem Content="Formula 1"/>
                <ListBoxItem Content="Formula 2"/>
                <ListBoxItem Content="Formula 3"/>
                <ListBoxItem Content="Formula 4"/>
                <ListBoxItem Content="Formula 5"/>
                <ListBoxItem Content="Formula 6" IsSelected="True"/>
            </ListBox>
        </GroupBox>

        <!-- Splitting Type A -->
        <GroupBox Header="Splitting Type A" Width="250" Height="140" Margin="220,124,0,150" HorizontalAlignment="Left">
            <StackPanel>
                <RadioButton Content="No Splitting" IsChecked="True"/>
                <RadioButton Content="Split with Storage Tank 1"/>
                <RadioButton Content="Split with LOW / MID D/B TANK"/>
                <RadioButton Content="Split with Storage Tank 4"/>
            </StackPanel>
        </GroupBox>

        <!-- Splitting Type B -->
        <GroupBox Header="Splitting Type B" Width="250" Height="140" Margin="220,200,0,0" HorizontalAlignment="Left">
            <StackPanel>
                <RadioButton Content="No Splitting" IsChecked="True" IsEnabled="True"/>
                <RadioButton Content="Split with Storage Tank 1" IsEnabled="True"/>
                <RadioButton Content="Split with LOW / MID D/B TANK" IsEnabled="True"/>
                <RadioButton Content="Split with Storage Tank 4" IsEnabled="True"/>
            </StackPanel>
        </GroupBox>

        <!-- Batch Start Type -->
        <GroupBox Header="Batch Start Type" Width="250" Margin="500,84,0,65" HorizontalAlignment="Left">
            <StackPanel>
                <RadioButton Content="No Batching" IsChecked="True"/>
                <RadioButton Content="Single Batch"/>
                <RadioButton Content="Continous Batching"/>
                <Button Content="All Tanks No Batching" Margin="5" Height="30"/>
            </StackPanel>
        </GroupBox>

        <!-- Batch Volume -->
        <TextBlock Text="Batch Volume" Margin="500,200,0,0" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Margin="500,220,0,0" VerticalAlignment="Top">
            <TextBox Name="BatchVolumeTextBox" Width="100" Text="900"/>
            <TextBlock Text="900 - 1350 Gallons" Margin="10,5,0,0"/>
        </StackPanel>

        <!-- Batch Start Level -->
        <TextBlock Text="Batch Start Level" Margin="500,270,0,0" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Margin="500,290,0,0" VerticalAlignment="Top">
            <TextBox Name="BatchStartLevelTextBox" Width="100" Text="500"/>
            <TextBlock Text="0 - 2500 Gallons" Margin="10,5,0,0"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Content="Close" Width="100" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,20,20" Click="Close_Click"/>
    </Grid>
</Window>
