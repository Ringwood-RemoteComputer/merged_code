<Window x:Class="Ring.ShiftControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shift Control Edit Screen" Height="600" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#A0C0C0">

    <Grid>
        <!-- Main Grid Definition -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Left Side: Current Shift Status -->
        <Border Grid.Column="0" Margin="10" Padding="10" BorderBrush="White" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Current Shift Status" FontSize="16" FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Shift 1" Width="80"/>
                    <Ellipse Width="20" Height="20" Fill="Red" Name="Shift1Status"/>
                    <TextBlock Text=" Not Running" Foreground="Red"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Shift 2" Width="80"/>
                    <Ellipse Width="20" Height="20" Fill="Red" Name="Shift2Status"/>
                    <TextBlock Text=" Not Running" Foreground="Red"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Shift 3" Width="80"/>
                    <Ellipse Width="20" Height="20" Fill="Red" Name="Shift3Status"/>
                    <TextBlock Text=" Not Running" Foreground="Red"/>
                </StackPanel>

                <!-- Shift Selection Tabs -->
                <TabControl Margin="10">
                    <TabItem Header="Shift 1">
                        <StackPanel>
                            <Button Content="Start Manually" Click="StartShift1_Click" Height="40" Width="200" Margin="5"/>
                            <Button Content="End Manually" Click="EndShift1_Click" Height="40" Width="200" Margin="5"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Shift 2">
                        <StackPanel>
                            <Button Content="Start Manually" Click="StartShift2_Click" Height="40" Width="200" Margin="5"/>
                            <Button Content="End Manually" Click="EndShift2_Click" Height="40" Width="200" Margin="5"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Shift 3">
                        <StackPanel>
                            <Button Content="Start Manually" Click="StartShift3_Click" Height="40" Width="200" Margin="5"/>
                            <Button Content="End Manually" Click="EndShift3_Click" Height="40" Width="200" Margin="5"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>

        <!-- Right Side: Tank Shift Inclusion Status -->
        <Border Grid.Column="1" Margin="10" Padding="10" BorderBrush="White" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Tank Shift Inclusion Status (This status is for ALL Shifts)" FontSize="16" FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Storage Tank 1" Width="150"/>
                    <Ellipse Width="20" Height="20" Fill="Red" Name="Tank1Status"/>
                    <TextBlock Text=" Not Included in Data Collection" Foreground="Red"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Storage Tank 2" Width="150"/>
                    <Ellipse Width="20" Height="20" Fill="Red" Name="Tank2Status"/>
                    <TextBlock Text=" Not Included in Data Collection" Foreground="Red"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="LOW / MID D/B TANK" Width="150"/>
                    <Ellipse Width="20" Height="20" Fill="Red" Name="Tank3Status"/>
                    <TextBlock Text=" Not Included in Data Collection" Foreground="Red"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Storage Tank 4" Width="150"/>
                    <Ellipse Width="20" Height="20" Fill="Red" Name="Tank4Status"/>
                    <TextBlock Text=" Not Included in Data Collection" Foreground="Red"/>
                </StackPanel>

                <!-- Tank Inclusion Controls -->
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Button Content="Include Tank in Data Collection" Click="IncludeTank_Click" Height="40" Width="250" Margin="5"/>
                    <Button Content="Remove Tank from Data Collection" Click="RemoveTank_Click" Height="40" Width="250" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="Close" HorizontalAlignment="Right" Width="100" Height="40" Margin="20" Click="Close_Click"/>
    </Grid>
</Window>
