<Window x:Class="Ring.Views.Shifts.Shift2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ring.Views.Shifts"
        mc:Ignorable="d"
        Title="Shift User Edit Screen" Height="450" Width="800"
        Background="#6CA7AF" ResizeMode="NoResize"
        ScrollViewer.HorizontalScrollBarVisibility="Auto"
        ScrollViewer.VerticalScrollBarVisibility="Auto">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Reports -->
        <GroupBox Header="Reports" Grid.Column="0" Margin="10">
            <StackPanel Margin="10">
                <CheckBox Content="Usage Report"/>
                <CheckBox Content="Batch History Report"/>
                <CheckBox Content="Batch History Usage Report"/>
                <CheckBox Content="Shift Consumption"/>
            </StackPanel>
        </GroupBox>

        <!-- Print Days -->
        <GroupBox Header="Print Days" Grid.Column="1" Margin="10">
            <StackPanel Margin="10">
                <CheckBox Content="Sunday"/>
                <CheckBox Content="Monday"/>
                <CheckBox Content="Tuesday"/>
                <CheckBox Content="Wednesday"/>
                <CheckBox Content="Thursday"/>
                <CheckBox Content="Friday"/>
                <CheckBox Content="Saturday"/>
            </StackPanel>
        </GroupBox>

        <!-- Close Button -->
        <Button Content="Close" Width="100" Height="35"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,10,10" Click="Close_Click"/>
    </Grid>
</Window>
