<UserControl x:Class="Ring.Controls.TankLevelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Viewbox Stretch="Uniform">
        <Grid Width="120" Height="180">
            <!-- Tank Container -->
            <Grid>
                <!-- Tank fill (liquid level) - Draw first so it appears behind wireframe -->
                <Grid x:Name="FillContainer" 
                      Width="80" 
                      Height="140" 
                      VerticalAlignment="Bottom"
                      Margin="0,10,0,10"
                      ClipToBounds="True">
                    
                    <!-- Liquid fill rectangle -->
                    <Rectangle x:Name="LiquidFill"
                              Width="78"
                              Fill="#1E90FF"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Center">
                    </Rectangle>
                    
                    <!-- Liquid surface - lighter blue ellipse -->
                    <Ellipse Width="76" 
                            Height="12"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0"
                            x:Name="LiquidTop"
                            Fill="#4DA6FF"/>
                </Grid>
                
                <!-- Left side of tank body -->
                <Line X1="0" Y1="30" X2="0" Y2="168"
                      Stroke="#5A6268"
                      StrokeThickness="2"
                      HorizontalAlignment="Left"
                      Margin="20,0,0,0"/>
                
                <!-- Right side of tank body -->
                <Line X1="0" Y1="30" X2="0" Y2="168"
                      Stroke="#5A6268"
                      StrokeThickness="2"
                      HorizontalAlignment="Right"
                      Margin="0,0,20,0"/>
                
                <!-- Bottom rim of tank (ellipse with conditional fill) -->
                <Ellipse x:Name="BottomRim"
                        Width="80"
                        Height="16"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,5"
                        Fill="Transparent"
                        Stroke="#5A6268"
                        StrokeThickness="2"/>
                
                <!-- Top rim of tank (wireframe ellipse) -->
                <Ellipse Width="80"
                        Height="20"
                        VerticalAlignment="Top"
                        Margin="0,20,0,0"
                        Fill="Transparent"
                        Stroke="#5A6268"
                        StrokeThickness="2"/>
            </Grid>
            
            <!-- Percentage Label -->
            <TextBlock x:Name="PercentageText"
                      Text="50%"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,20,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" 
                                    BlurRadius="4" 
                                    ShadowDepth="2" 
                                    Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </Viewbox>
</UserControl>

